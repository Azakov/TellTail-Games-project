{
  "compilerOptions": {
    "experimentalDecorators": true,
    "rootDir": ".",
    "outDir": "dist/",

    "baseUrl": "./server/",

    "target": "es2018",
    "lib": ["dom", "es2018"],
    "module": "commonjs",
    "resolveJsonModule": true,
    "sourceMap": true,

    "esModuleInterop": true,

    "strict": true,
    "noUnusedParameters": true,

    "strictPropertyInitialization": false,
    "emitDecoratorMetadata": true,


    "jsx": "react",

    "typeRoots": [
      "./@types"
    ],
    "noUnusedLocals": true
  },
  "exclude": ["config/"]
}